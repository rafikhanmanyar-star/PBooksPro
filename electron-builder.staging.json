{
  "appId": "com.pbookspro.app.staging",
  "productName": "PBooks Pro (Staging)",
  "directories": { "output": "release-staging" },
  "forceCodeSigning": false,
  "artifactName": "PBooksProStaging-Setup-${version}.${ext}",
  "files": [
    "package.json",
    "dist/**/*",
    "electron/**/*"
  ],
  "win": {
    "target": ["nsis", "portable"],
    "icon": "electron/assets/icon.ico",
    "signAndEditExecutable": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "portable": {
    "artifactName": "PBooksProStaging-${version}-portable.${ext}"
  },
  "publish": {
    "provider": "generic",
    "url": "https://pbookspro-api-staging.onrender.com/api/app-info/updates"
  }
}
