{
  "appId": "com.pbookspro.app.staging",
  "productName": "PBooks Pro (Staging)",
  "compression": "maximum",
  "directories": { "output": "release-staging" },
  "forceCodeSigning": false,
  "files": [
    "package.json",
    "dist/**/*",
    "electron/**/*"
  ],
  "win": {
    "target": ["nsis-web"],
    "icon": "electron/assets/icon.ico",
    "signAndEditExecutable": false
  },
  "nsisWeb": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "artifactName": "PBooksProStaging-WebSetup-${version}.${ext}"
  },
  "publish": {
    "provider": "github"
  }
}
