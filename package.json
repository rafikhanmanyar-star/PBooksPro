{
  "name": "my-projects-pro",
  "private": true,
  "version": "1.0.8",
  "description": "My Projects Pro - Finance and Project Management Application",
  "author": "My Projects Pro",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:win:portable": "npm run build && electron-builder --win portable",
    "electron:build:win:publish": "npm run build && electron-builder --win --publish always",
    "update-server": "node update-server/server.cjs"
  },
  "dependencies": {
    "@google/genai": "^1.29.0",
    "electron-updater": "^6.6.2",
    "html5-qrcode": "2.3.8",
    "lucide-react": "^0.555.0",
    "peerjs": "1.5.2",
    "qrcode": "1.5.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.1",
    "recharts": "^3.3.0",
    "sql.js": "^1.13.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "~5.8.2",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.myprojects.pro",
    "productName": "My Projects Pro",
    "directories": {
      "output": "C:/MyProjectsProBuild/release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
        "provider": "generic",
        "url": "https://update-server-y6ps.onrender.com/",
        "channel": "latest"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "sign": null,
      "signDlls": false,
      "signingHashAlgorithms": null,
      "publisherName": "My Projects Pro",
      "verifyUpdateCodeSignature": false
    },
    "forceCodeSigning": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "My Projects Pro",
      "deleteAppDataOnUninstall": false,
      "differentialPackage": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
