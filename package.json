{
  "name": "pbooks-pro",
  "private": true,
  "version": "1.2.34",
  "description": "PBooks Pro - Finance and Project Management Application",
  "author": "PBooks Pro",
  "repository": {
    "type": "git",
    "url": "https://github.com/rafikhanmanyar-star/PBooksPro.git"
  },
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:extract-schema": "node scripts/extract-schema.cjs",
    "electron": "npm run electron:extract-schema && cross-env VITE_ELECTRON_BUILD=true VITE_API_URL=https://api.pbookspro.com/api npm run build && electron-builder --win",
    "electron:dev": "cross-env VITE_ELECTRON_BUILD=true vite build && electron . --enable-logging",
    "electron:pack": "npm run electron:extract-schema && cross-env VITE_ELECTRON_BUILD=true npm run build && electron-builder --dir",
    "electron:production": "npm run electron:extract-schema && cross-env VITE_ELECTRON_BUILD=true VITE_API_URL=https://api.pbookspro.com/api npm run build && electron-builder --win",
    "electron:production:installer": "npm run electron:extract-schema && cross-env VITE_ELECTRON_BUILD=true VITE_API_URL=https://api.pbookspro.com/api npm run build && electron-builder --win nsis-web",
    "electron:staging": "npm run electron:extract-schema && cross-env VITE_ELECTRON_BUILD=true VITE_API_URL=https://pbookspro-api-staging.onrender.com/api npm run build && electron . --enable-logging",
    "electron:staging:installer": "npm run electron:extract-schema && cross-env VITE_ELECTRON_BUILD=true VITE_API_URL=https://pbookspro-api-staging.onrender.com/api npm run build && electron-builder --win nsis-web --config electron-builder.staging.json",
    "electron:dist": "npm run electron:production",
    "electron:installer": "npm run electron:production:installer",
    "update-server": "node update-server/server.cjs",
    "mcp:build": "cd mcp-server && npm run build",
    "mcp:dev": "cd mcp-server && npm run dev",
    "mcp:install": "cd mcp-server && npm install",
    "clear-local-transactions": "node tools/clear-local-transactions.cjs",
    "test:local": "powershell -ExecutionPolicy Bypass -File test-local.ps1",
    "test:server": "powershell -ExecutionPolicy Bypass -File test-local.ps1 -ServerOnly",
    "test:electron": "powershell -ExecutionPolicy Bypass -File test-local.ps1 -ElectronOnly",
    "deploy:staging": "powershell -ExecutionPolicy Bypass -File deploy-staging.ps1",
    "deploy:production": "powershell -ExecutionPolicy Bypass -File deploy-production.ps1",
    "release": "powershell -ExecutionPolicy Bypass -File ./build-and-push.ps1",
    "release:minor": "powershell -ExecutionPolicy Bypass -File ./build-and-push.ps1 -BumpType minor",
    "release:major": "powershell -ExecutionPolicy Bypass -File ./build-and-push.ps1 -BumpType major",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "@google/genai": "^1.29.0",
    "@types/react-window": "^1.8.8",
    "autoprefixer": "^10.4.23",
    "better-sqlite3": "^12.5.0",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.8.3",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.555.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-to-print": "^3.2.0",
    "react-window": "^2.2.3",
    "recharts": "^3.3.0",
    "socket.io-client": "^4.7.2",
    "sql.js": "^1.13.0",
    "tailwindcss": "^3.4.19",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "typescript": "~5.8.2",
    "vite": "^7.2.4"
  },
  "build": {
    "appId": "com.pbookspro.app",
    "productName": "PBooks Pro",
    "compression": "maximum",
    "directories": {
      "output": "release"
    },
    "files": [
      "package.json",
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis-web"
      ],
      "icon": "electron/assets/icon.ico",
      "signAndEditExecutable": false
    },
    "nsisWeb": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PBooks Pro",
      "artifactName": "PBooks-Pro-WebSetup-${version}.${ext}"
    },
    "publish": {
      "provider": "github"
    }
  }
}
